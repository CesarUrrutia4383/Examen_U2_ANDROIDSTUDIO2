<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu Principal"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:text="Registrar Alumno"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#673AB7"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="8dp" />
        <Button
            android:id="@+id/button1"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:text="Administrar Alumnos"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:text="Calificar"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#B73A62"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="8dp" />
        <Button
            android:id="@+id/button5"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:text="Asignar Materias"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3AB7AD"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="8dp" />
        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:text="Consultar Calificaciones"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#B7A23A"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="8dp" />
    </LinearLayout>

</LinearLayout>